{
    "name": "roberts-rules-online",
    "private": true,
    "version": "0.3.0",
    "type": "module",
    "scripts": {
        "dev": "npx tsx server.ts",
        "build": "tsc -b && vite build",
        "preview": "vite preview",
        "prepare": "husky install",
        "lint": "npx eslint . --report-unused-disable-directives --fix && tsc --noEmit --emitDeclarationOnly false",
        "prettier": "prettier ./ --write --ignore-path ./node_modules/phantom-config/.prettierignore",
        "stylelint": "npx stylelint --ignore-path .gitignore '**/*.{css,scss}' --fix",
        "format": "npm run lint && npm run stylelint && npm run prettier"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "express": "^4.21.0",
        "jsonwebtoken": "^9.0.2",
        "mysql": "^2.18.1",
        "nanoid": "^5.0.7",
        "node-mysql-wrapper": "^2.4.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.26.2",
        "react-toggle": "^4.1.3",
        "socket.io": "^4.8.0",
        "socket.io-client": "^4.8.0",
        "vite-express": "^0.19.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.21",
        "@types/mysql": "^2.15.26",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/react-toggle": "^4.0.5",
        "@vitejs/plugin-react": "^4.3.1",
        "eslint": "^9.12.0",
        "globals": "^15.9.0",
        "husky": "^8.0.0",
        "lint-staged": "^15.2.10",
        "phantom-config": "^1.0.1",
        "sass": "^1.78.0",
        "tsx": "^4.19.1",
        "typescript": "^5.5.3",
        "vite": "^5.4.1",
        "vite-plugin-svgr": "^4.3.0"
    }
}
