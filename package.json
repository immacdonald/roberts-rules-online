{
    "name": "roberts-rules-online",
    "private": true,
    "version": "0.9.1",
    "type": "module",
    "scripts": {
        "dev": "npx tsx server.ts",
        "build": "tsc -b && vite build",
        "start": "NODE_ENV=production npx tsx server.ts",
        "preview": "vite preview",
        "prepare": "husky",
        "lint": "npx eslint . --report-unused-disable-directives --fix && tsc -b --noEmit",
        "prettier": "prettier ./ --write --ignore-path ./node_modules/phantom-config/.prettierignore",
        "stylelint": "npx stylelint --ignore-path .gitignore '**/*.{css,scss}' --fix",
        "format": "npm run lint && npm run stylelint && npm run prettier"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.3.0",
        "bcrypt": "^5.1.1",
        "clsx": "^2.1.1",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "jsonwebtoken": "^9.0.2",
        "mysql": "^2.18.1",
        "nanoid": "^5.0.8",
        "node-mysql-wrapper": "^2.4.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-helmet-async": "^2.0.5",
        "react-redux": "^9.1.2",
        "react-router-dom": "^6.28.0",
        "react-toggle": "^4.1.3",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/mysql": "^2.15.26",
        "@types/node-mysql-wrapper": "^0.0.43",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@types/react-toggle": "^4.0.5",
        "@vitejs/plugin-react": "^4.3.3",
        "eslint": "^9.15.0",
        "globals": "^15.12.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "phantom-config": "^1.0.1",
        "sass": "^1.81.0",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "vite": "^5.4.11",
        "vite-plugin-svgr": "^4.3.0"
    }
}
